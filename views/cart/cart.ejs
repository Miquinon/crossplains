<h1>Your Shopping Cart</h1>

    <% if (cart && cart.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Item Size</th>
                    <th>Item Pounds</th>
                    <th>Quantity</th>
                    <!-- <th>Created At</th>
                    <th>Updated At</th> -->
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% cart.forEach(item => { %>
                    <tr>
                        <td><%= item.item_name %></td>
                        <td><%= item.item_size %></td>
                        <td><%= item.item_pounds %></td>
                        <td><%= item.quantity %></td>
                        <!-- <td><%= item.created_at %></td>
                        <td><%= item.updated_at %></td> -->
                    
                            <form action="/cart/remove" method="POST">
                                <input type="hidden" name="user_id" value="<%= user.user_id %>">
                                <input type="hidden" name="item_name" value="<%= item.item_name %>">
                                <input type="hidden" id="selected-size" name="item_size" value="<%= item.item_size %>">
                                <input type="hidden" id="selected-pounds" name="item_pounds" value="<%= item.item_pounds %>">
                                <button class="remove-item" data_user_id="" data_item_name="" data_item_size="" type="submit">Remove</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <form action="/cart/submit" method="POST">
            <input type="hidden" name="userId" value="<%= user.user_id %>">
            <button type="submit">Submit Cart</button>
        </form>
    <% } else { %>
        <p>Your cart is empty.</p>
    <% } %>

    <a href="/products">Back to Products</a>
    <script src="/scripts/remove.js"></script>
